<?xml version="1.0" encoding="utf-8"?>
<com.ateneaApp.customviews.SlidingLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_home_flHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/row_view" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_home_tlHome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:clipToPadding="false"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="@dimen/_48sdp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorBlack"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabTextColor="@color/tab_selected_color" />
</com.ateneaApp.customviews.SlidingLinearLayout>
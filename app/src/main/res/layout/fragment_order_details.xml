<?xml version="1.0" encoding="utf-8"?>
<com.ateneaApp.customviews.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_order_details_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_order_details_ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_3sdp"
                android:src="@mipmap/ic_back_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <com.ateneaApp.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/order_details"
                android:textAllCaps="false"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_22sdp"
                app:font_name="poppins_bold.otf"
                android:layout_marginLeft="@dimen/_3sdp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ateneaApp.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="17 January"
            android:textColor="@color/fashion_txt_color"
            android:textSize="@dimen/_13sdp"
            app:font_name="poppins_bold.otf" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_order_details_rvOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvLableOrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_no"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_regular.otf" />

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvOrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_1sdp"
                android:text="123456"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_semibold.otf"
                android:paddingLeft="@dimen/_1sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvLableItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_regular.otf" />

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_1sdp"
                android:text="10"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_semibold.otf"
                android:paddingLeft="@dimen/_1sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvLablePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/biil"
                android:textAllCaps="true"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_regular.otf" />

            <com.ateneaApp.customviews.CustomTextView
                android:id="@+id/fragment_order_details_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_1sdp"
                android:text="$64"
                android:textAllCaps="true"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="poppins_semibold.otf"
                android:paddingLeft="@dimen/_1sdp" />
        </LinearLayout>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_275sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/drawable_desline_verticle"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_order_details_ivShipping"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:src="@mipmap/ic_process_done" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_order_details_ivPayment"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:src="@mipmap/ic_process_done" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_order_details_ivComplite"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:src="@mipmap/ic_process_done" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_order_details_iDeliver"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:src="@mipmap/ic_process_complite" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:src="@mipmap/ic_process_active" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping"
                            android:textColor="@color/Login_title_color"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="poppins_bold.otf" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipped_to"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_address"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.ateneaApp.customviews.CustomTextView
                            android:id="@+id/fragment_order_details_tvPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="@string/payment"
                            android:textColor="@color/Login_title_color"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="poppins_bold.otf" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/by_net_banking"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_5sdp">

                            <com.ateneaApp.customviews.CustomTextView
                                android:id="@+id/fragment_order_details_tvComplite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/complite"
                                android:textColor="@color/Login_title_color"
                                android:textSize="@dimen/_11sdp"
                                app:font_name="poppins_bold.otf" />

                            <com.ateneaApp.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="17_01_2019"
                                android:textColor="@color/tab_selected_color"
                                android:textSize="@dimen/_10sdp"
                                app:font_name="poppins_regular.otf"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_made_on"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12th_january_5_27_pm"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_4sdp">

                            <com.ateneaApp.customviews.CustomTextView
                                android:id="@+id/fragment_order_details_tvDilver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivered"
                                android:textColor="@color/Login_title_color"
                                android:textSize="@dimen/_11sdp"
                                app:font_name="poppins_bold.otf" />

                            <com.ateneaApp.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="19_01_2019"
                                android:textColor="@color/tab_selected_color"
                                android:textSize="@dimen/_10sdp"
                                app:font_name="poppins_regular.otf"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_afternoon"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="poppins_regular.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="@string/write_your_feedback"
                            android:textColor="@color/confirm_color"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="poppins_bold.otf" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.ateneaApp.customviews.SlidingLinearLayout>
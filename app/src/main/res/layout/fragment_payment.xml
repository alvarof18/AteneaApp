<?xml version="1.0" encoding="utf-8"?>
<com.ateneaApp.customviews.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_payment_ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_3sdp"
                android:src="@mipmap/ic_back_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <com.ateneaApp.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/checkout"
                android:textAllCaps="false"
                android:textColor="@color/fashion_txt_color"
                android:textSize="@dimen/_22sdp"
                app:font_name="poppins_bold.otf"
                android:layout_marginLeft="@dimen/_3sdp" />

            <LinearLayout
                android:id="@+id/dailog_add_pincode_rlCurrentLocation"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/drawable_pin_bg"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <com.ateneaApp.customviews.CustomTextView
                    android:id="@+id/fragment_home_tvPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableStart="@mipmap/ic_map_pin"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="382481"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="poppins_regular.otf"
                    android:drawableLeft="@mipmap/ic_map_pin" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp">

                <com.ateneaApp.customviews.CustomTextView
                    android:id="@+id/fragment_payment_tvShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/shipping"
                    android:textColor="@color/Login_title_color"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="poppins_bold.otf"
                    android:layout_alignParentLeft="true" />

                <com.ateneaApp.customviews.CustomTextView
                    android:id="@+id/fragment_payment_tvPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/payment"
                    android:textColor="@color/Login_title_color"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="poppins_bold.otf" />

                <com.ateneaApp.customviews.CustomTextView
                    android:id="@+id/fragment_payment_tvComplite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/complite"
                    android:textColor="@color/Login_title_color_30"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="poppins_bold.otf"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/fragment_payment_ivShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_process_done"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:id="@+id/fragment_payment_ivPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_process_active" />

                <ImageView
                    android:id="@+id/fragment_payment_ivComplite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_process_noactive"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/drawable_desline" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_13sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp">

                    <com.ateneaApp.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/your_card"
                        android:textAllCaps="true"
                        android:textColor="@color/fashion_txt_color"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="poppins_bold.otf"
                        android:layout_alignParentLeft="true" />

                    <com.ateneaApp.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@string/add_manage"
                        android:textAllCaps="false"
                        android:textColor="@color/Login_title_color_30"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="poppins_medium.otf"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_payment_rvCardList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp">

                    <com.ateneaApp.customviews.CustomTextView
                        android:id="@+id/lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/payment_method"
                        android:textAllCaps="true"
                        android:textColor="@color/fashion_txt_color"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="poppins_bold.otf"
                        android:layout_alignParentLeft="true" />

                    <com.ateneaApp.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toEndOf="@+id/lbl"
                        android:gravity="end"
                        android:text="@string/get_5_off_with_buzz_credit_card"
                        android:textAllCaps="false"
                        android:textColor="@color/card_offer_color"
                        android:textSize="@dimen/_9sdp"
                        app:font_name="poppins_medium.otf"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/lbl" />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_round_color"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@mipmap/ic_debitcard"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <com.ateneaApp.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layoutDirection="rtl"
                        android:paddingBottom="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:text="@string/credit_debit_atm_card"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="poppins_medium.otf"
                        android:gravity="start" />

                    <ImageView
                        android:id="@+id/fragment_payment_ivCreditCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                        android:layout_margin="@dimen/_5sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_card_round_color"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@mipmap/ic_netbanking"
                            android:layout_marginLeft="@dimen/_10sdp" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layoutDirection="rtl"
                            android:paddingBottom="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:text="@string/net_banking"
                            android:textAlignment="textStart"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="poppins_medium.otf"
                            android:gravity="start" />

                        <ImageView
                            android:id="@+id/fragment_payment_ivNetBanking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                            android:layout_margin="@dimen/_5sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/drawable_card_round_color">


                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:layoutDirection="rtl"
                            android:paddingBottom="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:text="@string/wallet_upi"
                            android:textAlignment="textStart"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_11sdp"
                            app:font_name="poppins_extrabold.otf"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:gravity="start" />

                        <ImageView
                            android:id="@+id/fragment_payment_ivUpi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                            android:layout_margin="@dimen/_5sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/drawable_card_round_color">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@mipmap/ic_cod"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <com.ateneaApp.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layoutDirection="rtl"
                        android:paddingBottom="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:text="@string/cash_on_delivery"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_11sdp"
                        app:font_name="poppins_medium.otf"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="start" />

                    <ImageView
                        android:id="@+id/fragment_payment_ivCod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                        android:layout_margin="@dimen/_5sdp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:minHeight="@dimen/_50sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_payment_rlMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp">

                <com.ateneaApp.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/total_items"
                    android:textColor="@color/tab_selected_color"
                    android:textSize="@dimen/_9sdp"
                    app:font_name="poppins_light.otf"
                    android:layout_marginLeft="@dimen/_40sdp" />

                <com.ateneaApp.customviews.CustomTextView
                    android:id="@+id/fragment_payment_tvCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:text="08"
                    android:textColor="@color/fashion_txt_color"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="poppins_light.otf"
                    android:layout_marginLeft="@dimen/_40sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/sub_total"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_9sdp"
                            app:font_name="poppins_light.otf"
                            android:layout_marginLeft="@dimen/_40sdp" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:id="@+id/fragment_payment_tvSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:text="$270"
                            android:textColor="@color/fashion_txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="poppins_light.otf"
                            android:layout_marginLeft="@dimen/_40sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.ateneaApp.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/tax_9"
                            android:textColor="@color/tab_selected_color"
                            android:textSize="@dimen/_9sdp"
                            app:font_name="poppins_light.otf"
                            android:layout_marginLeft="@dimen/_40sdp" />

                        <com.ateneaApp.customviews.CustomTextView
                            android:id="@+id/fragment_payment_tvTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:text="$17"
                            android:textColor="@color/fashion_txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="poppins_light.otf"
                            android:layout_marginLeft="@dimen/_40sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_payment_ivMote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp" />

                    <com.ateneaApp.customviews.CustomTextView
                        android:id="@+id/fragment_payment_tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/fragment_payment_ivMote"
                        android:text="$270"
                        android:textColor="@color/fashion_txt_color"
                        android:textSize="@dimen/_15sdp"
                        app:font_name="poppins_semibold.otf"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/fragment_payment_ivMote" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/drawable_paymetn_btn"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp">

                        <com.ateneaApp.customviews.CustomTextView
                            android:id="@+id/fragment_payment_tvProcess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:drawableStart="@mipmap/ic_done_white_new"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_11sdp"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:text="@string/process"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="poppins_regular.otf"
                            android:drawableLeft="@mipmap/ic_done_white_new" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</com.ateneaApp.customviews.SlidingLinearLayout>
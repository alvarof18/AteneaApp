<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_210sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_1sdp"
    android:background="@drawable/drawable_transparant_bg_white_border"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_5sdp"
    android:focusable="true">

        <com.ateneaApp.customviews.CustomTextView
            android:id="@+id/row_addresslistnew_tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/fashion_txt_color"
            android:textSize="@dimen/_11sdp"
            app:font_name="poppins_semibold.otf"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_12sdp" />

        <com.ateneaApp.customviews.CustomTextView
            android:id="@+id/row_addresslistnew_tvAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textColor="@color/row_addresslistnew_tvColor"
            android:textSize="@dimen/_11sdp"
            app:font_name="poppins_regular.otf"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@color/black_03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/row_addresslistnew_tvCheck"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp" />

        <com.ateneaApp.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/delivery_address"
            android:textColor="@color/tab_selected_color"
            android:textSize="@dimen/_12sdp"
            app:font_name="nunitolight.ttf" />
    </LinearLayout>
</LinearLayout>
